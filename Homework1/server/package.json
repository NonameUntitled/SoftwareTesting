{
  "private": true,
  "name": "my-anime-server",
  "version": "1.0.0",
  "description": "MY ANIME LIST",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint \"**/*.ts\"",
    "lint-fix": "eslint --fix \"**/*.ts\"",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "start": "npm run build && node ./build/index.js"
  },
  "devDependencies": {
    "@types/bluebird": "3.5.30",
    "@types/express": "4.17.3",
    "@types/jest": "24.0.23",
    "@types/node": "13.9.1",
    "@types/supertest": "2.0.8",
    "@types/validator": "12.0.1",
    "eslint": "6.7.2",
    "jest": "24.9.0",
    "lint-staged": "9.5.0",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "ts-jest": "24.2.0",
    "typescript": "3.7.3"
  },
  "lint-staged": {
    "*.{ts,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "cors": "2.8.5",
    "express": "4.17.1",
    "reflect-metadata": "0.1.13",
    "supertest": "4.0.2"
  }
}
